<div class="auth-card">
	<div class="auth-card__inner custom-scroll">
		<div class="auth-card__margin"></div>
		<div class="auth-card__top">

			{% include "../ui/button.twig" with {
        props: {
          href: "#",
          class: "me-4",
          children: "Регистрация",
          type: "primary",
          state: "disabled",
        }
      } %}
			{% include "../ui/button.twig" with {
        props: {
          href: "#",
          class: "",
          children: "Вход",
          type: "clear",
        }
      } %}
		</div>
		<div class="auth-card__header text-center">
			<h1 class="auth-card__title mb-0">Добро пожаловать!</h1>
			<p class="auth-card__description mb-0">Зарегистрируйтесь</p>
		</div>
		<form data-form-id="registration-form" class="auth-form js-form">
			{% include "../ui/text-field.twig" with {
        props: {
          class: "mb-3",
          name: "phone",
          label: "Номер телефона",
          validate: "required, phone",
          placeholder: "+7",
          inputType: "tel",
          type: "",
          error: "Неправильно введен номер телефона",
          errorRequired: "Это обязательное поле",
        }
      } %}

			{% include "../ui/text-field.twig" with {
        props: {
          class: "mb-3",
          name: "email",
          label: "E-mail",
          validate: "required, email",
          placeholder: "mail@mail.com",
          inputType: "email",
          type: "",
          error: "Неправильно введен адрес электронной почты",
          errorRequired: "Это обязательное поле",
        }
      } %}

			{% include "../ui/text-field.twig" with {
        props: {
          class: "mb-3",
          name: "password",
          label: "Пароль",
          validate: "required, password",
          placeholder: "******",
          inputType: "password",
          type: "",
          error: "Пароль слишком простой. Он должен содержать не менее 8 символов, включая буквы и цифры (Если нет букв)",
          errorRequired: "Это обязательное поле",
        }
      } %}

			{% include "../ui/text-field.twig" with {
        props: {
          class: "mb-3",
          name: "password",
          label: "Повторите пароль",
          validate: "required, password-confirm",
          placeholder: "******",
          inputType: "password",
          type: "",
          error: "Пароли не совпадают. Пожалуйста, введите одинаковые пароли",
          errorRequired: "Это обязательное поле",
        }
      } %}

			<div class="auth-form__row d-flex mb-3 justify-content-between">
				{% include "../ui/radio.twig" with {
          props: {
            class: "",
            validate: "required",
            name: "remember",
            value: "remember",
            children: 'Я принимаю условия <a href="#" class="auth-card__link">публичной оферты</a>, <a href="#" class="auth-card__link">политики конфиденциальности</a> и даю согласие на обработку персональных данных.',
            type: "checkbox",
            errorRequired: "Для регистрации примите условия публичной оферты и политики конфиденциальности"
          }
        } %}
			</div>

			{% include "../ui/button.twig" with {
        props: {
          class: "auth-form__submit js-form-submit",
          children: "Войти",
          type: "primary",
          attributes: 'type="submit"',
          disabled: true
        }
      } %}

		</form>
		<p class="auth-card__switch mb-2">
			<span>Уже зарегистрированы?</span>
			<a href="#" class="auth-card__link">Войти</a>
		</p>
		<div class="auth-social auth-card__social d-flex flex-column justify-content-end">
			<div class="auth-social__inner">
				<p class="auth-social__title text-center">Или войдите с помощью</p>
				<ul class="auth-social__list d-flex gap-3">
					{% for item in ["yandex", "google", "vk", "mail", "sber"] %}
						<li class="auth-social__item">
							<a href="#{{item}}" class="auth-social__link">
								<img src="./img/icons/{{item}}.svg" alt="Войти с помощью {{item}}" class="auth-social__icon">
							</a>
						</li>
					{% endfor %}
				</ul>
			</div>
		</div>
		<div class="auth-card__margin"></div>
	</div>
</div>
